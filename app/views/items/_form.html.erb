<%= simple_form_for(item) do |f| %>
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :price, input_html: { step: '0.01', min: '0.00' } %>
  <%= f.input :quantity, min: 0 %>
  <%= f.input :main_image, as: :file %>

  <%= f.label :category_ids, "Categories" %>
  <%= link_to "(New Category)", new_category_path, target: "_blank" %>
  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
    <div class="form-check">
      <%= cb.check_box(class: 'form-check-input') %>
      <%= cb.label(class: 'form-check-label') %>
    </div>
  <% end %>

  <%= f.submit class: 'btn btn-primary' %>
<% end %>
