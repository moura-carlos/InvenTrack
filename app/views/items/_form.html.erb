<%= simple_form_for(item) do |f| %>
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :price, input_html: { step: '0.01', min: '0.00' } %>
  <%= f.input :quantity, min: 0 %>
  <%= f.input :main_image, as: :file %>
  <%= f.association :categories, label: "Categories", as: :check_boxes, collection: Category.all, label_method: :name, value_method: :id, input_html: { multiple: true } %>


  <%= f.submit class: 'btn btn-primary' %>
<% end %>
