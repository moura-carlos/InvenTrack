<% items.each do |item| %>
  <div class="col-md-4 mb-4">
    <%= link_to item, style: "color:inherit;text-decoration:none;" do %>
      <div class="card">
        <div class="ratio ratio-4x3">
          <%= main_image(item) %>
        </div>
        <div class="card-body">
          <h5 class="card-title"><%= item.title %></h5>
          <p class="card-text"><%= item.description %></p>
          <ul class="list-group list-group-flush">
            <li class="list-group-item">
                Author: <%= link_to item.user.name, item.user if current_user.is_admin?%>
            </li>
            <li class="list-group-item">Quantity: <%= item.quantity %></li>
            <li class="list-group-item">Price: $<%= item.price %> per unity</li>
            <li class="list-group-item">Total value: <%= number_to_currency(item.total_value) %></li>
          </ul>
          <div class="mt-3">
            <%= link_to 'Edit', edit_item_path(item), class: 'btn btn-primary me-2' %>
            <%= link_to 'Delete', item_path(item),
            data: { turbo_method: :delete, turbo_confirm: 'Are you sure you want to delete this item?' },
            class: 'btn btn-danger' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
