<%= simple_form_for @category do |f| %>
  <%= f.input :name, label: "Category Name" %>
  <%= f.submit "Add Category", class: "btn btn-primary" %>
<% end %>

<h4 class="mb-2 mt-2">Existing Categories:</h4>
<div class="mt-3">
  <% Category.all.each do |category| %>
    <span class="badge bg-secondary me-2"><%= link_to category.name, category, style: "color:inherit;text-decoration:none;" %></span>
  <% end %>
</div>
