<div class="container">
  <h1>Categories</h1>
  <div class="row">
    <% @categories.each do |category| %>
      <div class="col-md-4">
        <%= link_to category, style: "color:inherit;text-decoration:none;" do %>
        <div class="card mb-4">
          <div class="card-body">
            <h5 class="card-title"><%= category.name %></h5>
            <% if current_user && current_user.is_admin? %>
              <%= link_to "Edit", edit_category_path(category), class: "btn btn-primary me-2" %>
              <%= link_to 'Delete', category_path(category),
                data: { turbo_method: :delete, turbo_confirm: 'Are you sure you want to delete this category?' },
                class: 'btn btn-danger' %>

            <% end %>
          </div>
        </div>
        <% end %>
      </div>
    <% end %>
  </div>
  <%= link_to "New Category", new_category_path, class: "btn btn-success" %>
</div>
